{
  "name": "veinif",
  "version": "0.0.1-alpha",
  "description": "Choice-based interactive fiction framework",
  "main": "electron-src/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "server": "lite-server",
    "tsc:w": "tsc -w",
    "dev": "concurrently \"npm:tsc:w\" \"npm:server\"",
    "build": "webpack --mode=production",
    "electron-build": "electron-builder --win=portable"
  },
  "keywords": [
    "interactive fiction"
  ],
  "author": "Uyen Nguyen",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^14.14.37",
    "@types/webpack": "^5.28.0",
    "electron": "^12.0.4",
    "electron-builder": "^22.10.5",
    "filemanager-webpack-plugin": "^4.0.0",
    "html-loader": "^2.1.2",
    "html-webpack-plugin": "^5.3.1",
    "lite-server": "^2.6.1",
    "typescript": "^4.2.3",
    "webpack": "^5.30.0",
    "webpack-cli": "^4.6.0"
  },
  "electronBuilder": {
    "build": {
      "productName": "chosen",
      "appId": "chosen.TestApp",
      "asar": "true",
      "win": {
        "target": [
          "portable"
        ]
      },
      "directories": {
        "output": "electron/output",
        "app": "electron/app",
        "buildResources": "electron/buildResources"
      }
    }
  }
}
