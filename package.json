{
  "name": "veinif",
  "version": "0.0.1-alpha.2",
  "description": "Choice-based interactive fiction framework",
  "main": "electron-src/index.js",
  "scripts": {
    "dev": "vite",
    "test": "echo \"Error: no test specified\" && exit 1",
    "tsc:w": "tsc -w",
    "build": "vite build --config vite.config.js && npm run copy",
    "copy": "copyfiles -u 1 './dist/*.html' ./electron-src/ && copyfiles -u 1 './dist/assets/*' ./electron-src",
    "preview": "vite preview --port 8080",
    "electron-build": "electron-builder --win=portable"
  },
  "keywords": [
    "interactive fiction"
  ],
  "author": "Uyen Nguyen",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-strip": "^2.1.0",
    "copyfiles": "^2.4.1",
    "electron": "^12.0.4",
    "electron-builder": "^22.10.5",
    "typescript": "^4.2.3",
    "vite": "^2.4.2"
  },
  "electronBuilder": {
    "build": {
      "productName": "veinIFgame",
      "appId": "veinIFgame.test",
      "asar": "true",
      "win": {
        "target": [
          "portable"
        ]
      },
      "directories": {
        "output": "electron/output",
        "app": "electron/app",
        "buildResources": "electron/buildResources"
      }
    }
  },
  "dependencies": {
    "@types/dompurify": "^2.2.3",
    "dompurify": "^2.3.1"
  }
}
